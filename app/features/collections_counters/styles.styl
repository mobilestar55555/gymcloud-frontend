.gc-block-group
  display block
  border-collapse collapse
  border-radius 4px

  .gc-block
    float left
    padding 15px 10px
    text-align center
    color #757575
    background #F9F9F9
    border 1px solid #ededed
    width 115px

    .gc-block-highlight
      font-size 40px

    label
      text-transform uppercase
      font-weight normal

    &:first-child
      border-top-left-radius 4px
      border-bottom-left-radius 4px

    &:last-child
      border-top-right-radius 4px
      border-bottom-right-radius 4px

    &:not(:first-child)
      border-left none
