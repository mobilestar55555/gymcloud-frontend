.gc-remove-margin.row
  margin: 0

.gc-program-description-container
  padding: 15px 0

.gc-program-empty-placeholder
  min-height: 400px
  width: 100%
  padding: 5px

.gc-program-options
  padding-top: 10px
  padding-bottom: 10px

.gc-program-empty-icon
  height: 38px
  width: 40px
  color: #3a99d8
  margin: 110px auto 15px auto
  background-image: url(../images/workouts-single.png)
  background-repeat: no-repeat
  background-size: contain
  background-position: center
  opacity: 0.8

.gc-program-empty-placeholder p
  color: #c1c1c1
  font-size: 14px
  line-height: 16px
  margin-bottom: 17px

.gc-program-empty-placeholder .btn
  border-radius: 50px
  font-size: 12px
  color: #3a99d8
  text-transform: uppercase
  background: transparent
  border-color: #3a99d8
  border-radius: 50px
  text-align: center
  line-height: 16px
  margin-top: -5px

.gc-program-delete-button
  border-radius: 50px
  font-size: 12px
  color: #ee6d5d
  text-transform: uppercase
  background: #fff
  border-color: #ee6d5d
  border-radius: 50px
  text-align: center
  line-height: 16px

  &:hover,
  &:active,
  &:focus
    border-color: #ee6d5d
    background-color: #ee6d5d

.gc-programs-weeks-list-container
  padding: 10px

.gc-programs-weeks-list-container .gc-program-week-item
  border: 1px solid rgba(40,45,48,0.1)
  padding: 10px
  border-radius: 5px
  background-color: #F9F9F9
  margin-bottom: 20px

.gc-program-week-item

  button.gc-chevron
    transform: rotate(-180deg)

  .gc-program-week-actions
    display: block
    list-style-type: none
    margin: 0
    padding: 0
    text-align: right

    .gc-chevron
      background: url('../images/chevron-down-grey.svg') no-repeat
      background-size: contain
      border: none
      margin-top: -5px
      margin-right: 3px
      background-color: transparent
      box-shadow: none
      color: #fff
      padding: 4px 0px
      height: 30px
      width: 30px

    .gc-context-menu-dropdown
      background: url('../images/context-menu-icon-grey.svg') no-repeat
      background-size: contain
      border: none
      margin-top: -5px
      background-color: transparent
      box-shadow: none
      color: #fff
      padding: 4px 0px
      height: 30px
      width: 30px

  &.folded
    region
      display: none
      color: blue
    button.gc-chevron
      transform: rotate(0deg)

    .gc-program-week-title .workouts-count
      display: inline-block

  .gc-program-week-title
    display: flex
    align-items: center
    height: 33px
    color: #757575

    h2
      margin: 0
      font-size: 18px
      font-weight: bold
      cursor: pointer

      &:focus
        padding: 3px
        border: 1px solid #cbd4d7
        border-radius: 3px
        background: #fff
        outline: none

    .workouts-count
      display: none
      margin-left: 10px
      font-size: 18px

  .gc-program-weeks-workouts-container
    border-radius: 5px
    background-color: #F9F9F9

.gc-program-weeks-workouts-container .gc-program-workouts-list
  padding: 0px

.gc-week-workouts-empty
  text-align: center

  .quick-add
    padding: 0
    text-transform: none
    font-size: 13px

  .gc-exercises-assign-input-wrapper
    text-align: left

.gc-program-week-actions
  display: none

  li
    padding: 0
    display: inline-block
    font-size: 15px
    color: #BDBDBD
    vertical-align: middle

    &.gc-week-remove-container
      margin-top: -2px

      .gc-remove-program-week
        height: 28px
        background-position: center 7px

.gc-program-counter
  display: inline-block
  float: right

.gc-workout-draggable.gu-mirror
  background-color: #fff
  border-radius: 6px

.gc-program-add-workout,
.gc-add-workout
  margin-right: 5px

.gc-main-workspace .gc-workspace-content.program
  top: 110px
  height: calc(100% - 188px)

.gc-program-workout-item
  .gc-properties-select_box
    .dropdown-menu
      top: auto
      bottom: 100%
      margin-bottom: 2px