.gc-author-scope

  .btn-group

    label.btn
      margin: 0 -1px 0 0
      background: #e7e7e7
      color: #999
      border-radius: 50px 0 0 50px
      border-color: rgba(40,45,48,0.1)
      font-size: 12px
      text-transform: uppercase
      text-align: center
      line-height: 16px
      min-width: 64px
      box-shadow: none

      &:hover,
      &:active,
      &:focus,
      &.active
        background: #fff
        z-index: 1

        span
          color: #3a99d8

      span
        font-size: 12px
        line-height: 12px

      + label
        border-radius: 0 50px 50px 0
