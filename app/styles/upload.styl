blue = #3a99d8

.gc-upload-video-modal

  .modal-body
    padding 25px

  .gc-upload-video
    background-color blue
    color white

  .gc-video-upload
    border 1px dashed #b0b0b0
    border-radius 10px
    text-align center
    padding 70px 20px

    h5
      color #808080

  .gc-video-item-upload
    margin 10px 0

    .row
      border-bottom 1px solid #ededed
      margin-left 0
      margin-right 0
      padding 15px 0

    .btn-group
      margin 5px 0

    .gc-upload-options
      color #AFAFAF
      font-size 16px
      .gc-upload-icon
        cursor pointer
        margin-left 7px

    .gc-video-file-name
      padding 4px 0

    .gc-privacy
      label
        font-size 12px
        text-transform uppercase
        text-align center
