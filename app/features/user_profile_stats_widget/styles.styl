.gc-user-profile-stats-widget
  display: flex
  align-items: center
  justify-content: space-between
  height: 80px
  background: #3a99d8
  padding: 0 25px

  .user
    display: flex
    align-items: center

    .avatar
      width: 60px
      height: 60px
      border-radius: 50%
      border: 2px solid #5da8d9
      overflow: hidden

      img
        width: 100%
        height: 100%

    .name
      margin-left: 15px
      font-size: 30px
      font-weight: 600
      color: #ffffff

  .profile-stats
    display: flex

    .title,
    .value
      display: flex
      align-items: center
      justify-content: space-around
      padding: 0 5px
      color: #ffffff
      font-size: 13px
      text-transform: uppercase

    .title
      border-bottom: 1px solid #ffffff
      padding-bottom: 5px

    .value
      padding-top: 5px

      .units
        margin-left: 3px
