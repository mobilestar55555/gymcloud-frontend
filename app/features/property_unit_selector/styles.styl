$checkbox_color = #3398db
$tooltip_background = #feffff
$text_color = #7c7c7c

.property-unit-selector
  display: none
  position: absolute
  left: -100%
  padding: 21px
  z-index: 4
  list-style-type: none
  color: $text_color
  background: $tooltip_background
  filter: drop-shadow(rgba(0, 0, 0, 0.3) 0 2px 7px);
  border-radius: 4px
  cursor: initial

  &.top
    top: 46px

    &:after, &:before
      bottom: 100%
      left: 50%
      border: solid transparent
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none

    &:after
      border-color: rgba(254, 255, 255, 0)
      border-bottom-color: $tooltip_background
      border-width: 13px
      margin-left: -13px

    &:before
      border-color: rgba(254, 255, 255, 0)
      border-bottom-color: $tooltip_background
      border-width: 14px
      margin-left: -14px

  &.bottom
    bottom: 46px

    &:after, &:before
      top: 100%
      left: 50%
      border: solid transparent
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none

    &:after
      border-color: rgba(254, 255, 255, 0)
      border-top-color: $tooltip_background
      border-width: 13px
      margin-left: -13px

    &:before
      border-color: rgba(254, 255, 255, 0)
      border-top-color: $tooltip_background
      border-width: 14px
      margin-left: -14px

  li
    display: flex
    align-items: center
    justify-content: flex-start
    margin-bottom: 19px
    cursor: pointer

    &:last-child
      margin: 0

    input[type='radio']
      display: none

    label
      display: flex
      align-items: center
      justify-content: flex-start
      margin: 0
      font-size: 12px
      font-weight: 500
      text-transform: uppercase
      text-align: left
      cursor: pointer

      i.fa
        max-width: 15px
        margin-right: 13px
        font-size: 15px
        color: $checkbox_color

        &.fa-check-square
          font-size: 14px
