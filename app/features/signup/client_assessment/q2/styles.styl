$grey-color = #a6a7aa

:local .question
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  height: 300px

  .title
    font-size: 18px
    font-weight: 800
    text-align: center
    margin: 20px 0 40px 0

  .question_number
    text-align: center
    color: $grey-color
    font-size: 16px

  input
    font-size: 24px
    text-align: center
    padding: 0
    color: black

  .date_picker
    min-width: 260px
    height: 38px
    z-index: 2

    input
      width: 100%

  .measurements
    display: flex
    justify-content: space-around
    align-items: center
    align-self: stretch

    input
      min-width: 50px
      text-align: right

    input + span
      display: inline-block
      font-size: 30px
      text-align: center
      margin: 0 5px 0 2px
      align-self: stretch

    label
      display: flex
      justify-content: space-around
      align-items: center

    .label_text
      color: $grey-color
      margin-right: 10px
