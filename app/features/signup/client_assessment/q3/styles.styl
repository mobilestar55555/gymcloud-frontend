$grey-color = #a6a7aa

:local .question
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  height: 300px

  .title
    font-size: 18px
    font-weight: 800
    text-align: center
    margin: 20px 0 40px 0

  .question_number
    text-align: center
    color: $grey-color
    font-size: 16px

  textarea
    width: calc(100% - 40px)
    border: 1px solid $grey-color
    border-radius: 3px
    resize: none
    outline: none
    font-size: 24px
    color: black
