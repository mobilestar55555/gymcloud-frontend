.new-profile-view
  display: flex

  .profile-left-side,
  .profile-right-side
    padding: 27px

  .profile-left-side
    display: flex
    flex-direction: column

  .profile-left-side
    width: 34%
    background-color: #3398dc

    .profile-fullfillment
      font-size: 16px
      margin-bottom: 20px
      span
        color: white

    .profile-progress-bar
      height: 15px
      width: 100%
      background-color: #1673b1
      border-radius: 10px
      overflow: hidden
      .profile-progress
        background-color: #1dcc6b
        height: 100%
        width: 70%

    .name
      font-size: 25px
      font-weight: bold
      color: white
      margin-top: 34px
      align-self: center
      margin-bottom: 30px
      text-align: center

    .avatar
      position: relative
      align-self: center
      border-radius: 50%
      width: 185px
      height: 185px
      background-color: #1673b1
      background-size: cover
      cursor: pointer
      overflow: hidden
      .image-container
        position: absolute
        width: 185px
        height: 185px
        background-size: cover
        background-repeat: no-repeat
        background-position: 50% 50%
      .upload-avatar
        display: block
        width: 185px
        height: 230px
        position: absolute
        top: -40px
        left: 0
        z-index: 5
        opacity: 0

      .avatar-overlay
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
        position: absolute
        background-color: rgba(255,255,255,.0)
        width: 185px
        height: 185px
        .note
          opacity: 0.0
          color: white
          text-align: center
          color: #3398dc
      &:hover
        .avatar-overlay
          background-color: rgba(255,255,255,.7)
          .note
            opacity: 1

    .account-and-payment
      height: 80px
      width: 100%
      border: 1px solid white
      border-radius: 5px
      display: flex
      padding: 16px 16px

      .account-type
        .type-label
          color: white
          font-size: 12px
          margin-bottom: 5px
        .type
          width: 170px
          font-size: 1.1em
          line-height: 1.1em
          margin-bottom: 20px
      .mmmoney
        align-self: center
        color:white
        font-size: 36px
        margin: 0
        sup
          font-size: 18px

    .control-links
      display: flex
      margin: 10px 3px
      a
        color: white
        font-size: 18px

      .cancel-subscription
        display: flex
        align-items: center
        border-radius: 17px

        &:hover
          background: #d43f3a

        i
          display: inline-block
          margin-right: 5px
          width: 15px
          height: 15px
          background-image: url('../images/icon-cross.png')


  .profile-right-side
    width: 66%
    overflow-y: auto
    padding-bottom: 50px

    label.gc-radio
      color: #b5b5b5

.gc-height-value
  display: inline-block
  height: 18px
  width: auto
  min-width: 5px

.gc-height-divider
  margin-right: 6px
