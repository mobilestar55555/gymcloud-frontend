:local .payment_success
  .icon
    width: 52px
    height: 43px
    margin: 82px auto 23px auto
    background: transparent url('../../../images/have-trainer.png') no-repeat

  .title
    font-size: 20px
    font-weight: 800
    text-align: center
    margin: 0 0 25px 0

  .description
    font-size: 15px
    text-align: center
    margin: 0 0 70px 0

  .buttons
    display: flex
    justify-content: center
    align-items: center
    height: 70px
    padding: 10px 20px 0 20px
    border-top: 1px solid #e5e5e5

    &:before,
    &:after
      display: none

    .next
      margin: 0
