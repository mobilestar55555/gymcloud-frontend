.gc-video-assigned-wrapper

  position: relative

  .iframe
    position: relative

    &:before
      padding-top: 56.25%
      content: ''
      display: block

    iframe
      position: absolute
      width: 100%
      height: 100%
      top: 0
      left: 0
      right: 0
      border: 0

.gc-video-assigned

  .gc-video-controls
    height: 50px
    display: flex
    align-items: center
    padding: 0 17px
    background-color: #f9f9f9
    margin: -20px 0 20px

    .btn-link + .btn-link
      margin-left: 10px

    > div
      padding: 0px

    .gc-video-link
      font-size: 13px
      color: #747474
      display: inline-block
      text-decoration: none

      span
        &.name
        &.type
          color: #cacaca

      > i
        margin: 0 5px

      &:hover,
      &:active
        color: #747474

    .gc-video-delete
      color: #ee6d5d
      padding: 0

      &:hover,
      &:active,
      &:focus
        background: transparent
        color: #ee6d5d

    .gc-icon-trash
      width: 13px
      height: 15px
      vertical-align: -1px
      cursor: pointer

  .gc-video-duration
    padding: 0 4px
    background-color: rgba(78,78,78,0.5)
    color: #fff
    border-radius: 3px
    position: absolute
    bottom: 20px
    left: 20px
    font-weight: 300
    line-height: 18px
    font-size: 14px

  .iframe
    height:100%

.gc-video-assigned-placeholder
  background: #f9f9f9
  padding: 30px 15px
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center

  .placeholder-icon
    background: #fefefe
    border-radius: 100px
    height: 78px
    width: 78px
    text-align: center
    color: #3a99d8
    font-size: 30px
    line-height: 84px
    margin: 0 auto 15px
    padding-left: 5px

  p
    color: #c1c1c1
    font-size: 14px
    line-height: 16px
    margin-bottom: 15px

  .btn
    border-radius: 50px
    font-size: 12px
    color: #3a99d8
    text-transform: uppercase
    background: transparent
    border-color: #3a99d8
    border-radius: 50px
    text-align: center
    line-height: 16px

.gc-video-uploaded-at-wrapper
  line-height: 17px
  font-size: 13px
  font-weight: 300
  color: #757575
  margin-left: 15px

.gc-video-replace
  line-height: 18px
  font-size: 14px
  font-weight: 300
  color: #3a99d8
  cursor: pointer
  margin-right: 10px
  margin-left: auto
