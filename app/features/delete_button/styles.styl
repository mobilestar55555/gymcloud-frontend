.gc-action-button

  border-radius: 50px
  font-size: 12px
  text-transform: uppercase
  background: #fff
  border-radius: 50px
  text-align: center
  line-height: 16px

  &.type-delete
    color: #ee6d5d
    border-color: #ee6d5d

    &:hover,
    &:active,
    &:focus
      border-color: #ee6d5d
      background-color: #ee6d5d
      color: #fff
