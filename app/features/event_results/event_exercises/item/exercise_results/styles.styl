.workout-enter-middle
  padding: 30px 0 30px 0
  border-left: 1px solid #ededed
  border-right: 1px solid #ededed


  .middle-item
    position: relative
    cursor: pointer
    padding-right: 70px
    padding-left: 25px

    &:hover
      .delete-button
        display: inline-block

    .tooltip-inner
      white-space: nowrap
      max-width: 500px
      padding: 5px 8px

    .right-side
      display: flex
      align-items: center
      margin-left: auto

  .workout-enter-prev-result
    span:first-child
      margin-right 7px
