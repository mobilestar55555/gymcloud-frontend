.gc-exercises-exercise-view
  padding: 0 15px

  h2
    font-size: 16px
    color: #404447
    font-weight: 700
    margin: 0 0 20px 0

    span[contenteditable="true"]
      display: inline-block
      max-width: 100%
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis

      &:focus
        text-overflow: initial!important

  .gc-exercises-exercise-descr
    font-size: 16px
    color: #404447
    margin-bottom: 1em

.gc-exercises-exercise-video
  position: relative
  height: 480px
  padding-top: 25px

.gc-exercises-exercise-video iframe
  position: absolute
  top: 0
  left: 0

.gc-exercises-exercise-video-link
  font-size: 13px
  color: #747474
  display: inline-block
  text-decoration: none

.gc-exercises-exercise-video-link span
  color: #cacaca

.gc-exercises-exercise-video-link > i
  margin: 0 5px

.gc-exercises-exercise-video-link:hover,
.gc-exercises-exercise-video-link:active
  color: #747474
  text-decoration: none

.gc-exercise-edit-button
  border-radius: 50px
  font-size: 12px
  color: #3a99d8
  text-transform: uppercase
  background: #fff
  border-color: #3a99d8
  border-radius: 50px
  text-align: center
  line-height: 16px

.gc-exercise-edit-button:hover,
.gc-exercise-edit-button:active,
.gc-exercise-edit-button:focus
  border-color: #3a99d8

.gc-exercise-back-button
  border-radius: 50px
  font-size: 12px
  color: #3a99d8
  text-transform: uppercase
  background: #fff
  border-color: #3a99d8
  border-radius: 50px
  text-align: center
  line-height: 16px

.gc-exercise-back-button:hover,
.gc-exercise-back-button:active,
.gc-exercise-back-button:focus
  border-color: #3a99d8

.gc-exercise-save-button
  border-radius: 50px
  font-size: 12px
  color: #3a99d8
  text-transform: uppercase
  background: #fff
  border-color: #3a99d8
  border-radius: 50px
  text-align: center
  line-height: 16px

.gc-exercise-save-button:hover,
.gc-exercise-save-button:active,
.gc-exercise-save-button:focus
  border-color: #3a99d8

.gc-exercise-video-controls
  margin-top: 15px
  max-height: 25px

.gc-video-youtube-icon
  width: 17px
  background-image: url("../images/icon-video-youtube.png")

.gc-video-icon
  display: inline-block
  margin-right: 5px
  height: 10px
  width: 12px
  background-repeat: no-repeat
  background-position: center

.gc-video-vimeo-icon
  width: 12px
  background-image: url("../images/icon-video-vimeo.png")

.gc-exercise-video-controls .btn-link + .btn-link
  margin-left: 10px

.gc-exercise-video-update
  color: #3a99d8
  padding: 0

.gc-exercise-video-update:hover,
.gc-exercise-video-update:active,
.gc-exercise-video-update:focus
  background: transparent
  color: #3a99d8

.gc-exercise-video-delete
  color: #ee6d5d
  padding: 0

.gc-exercise-video-delete:hover,
.gc-exercise-video-delete:active,
.gc-exercise-video-delete:focus
  background: transparent
  color: #ee6d5d

.gc-content-nav ~ .btn
  margin: -5px 0 0 0

.gc-exercises-exercise-view .gc-exercises-exercise-descr-placeholder
  font-size: 16px
  color: #c1c1c1
  margin-bottom: 1em

.gc-exercises-assign-view
  padding: 15px 23px 5px 23px

.gc-exercises-assign-view ul a
  cursor: pointer

.gc-exercises-assign-view .gc-global-ewp-assigned-mark .glyphicon
  color: #3a99d8
  display: none

.gc-exercises-assign-view .gc-global-ewp-assigned-mark .glyphicon.active
  display: inline-block
  padding: 16px 0px
  line-height: 32px

.gc-exercise-edit-form .row
  overflow: hidden

.gc-exercise-edit-form label
  color: #3a99d8
  font-size: 15px
  font-weight: normal
  line-height: 15px
  min-height: 15px

.gc-exercise-title > span:hover
  border-bottom: 1px dashed #3a99d8
  cursor: pointer

.gc-exercise-title > span:focus
  border: 1px solid #404447
  padding: 5px 10px

textarea.gc-exercise-description-editor
  overflow: hidden
  border: 1px dashed transparent
  box-shadow: none
  color: #333
  font-size: 14px
  resize: vertical
  height: 2.5em
  max-height: 15em

textarea.gc-exercise-description-editor:hover
  border-color: #3a99d8
  cursor: pointer

textarea.gc-exercise-description-editor:focus
  box-shadow: none
  outline: none
  border-color: #3a99d8
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)

.gc-exercise-description-editor::placeholder
  color: #999
  opacity: 1

.gc-exercise-description
  border: none
  resize: none
  font-size: 16px
  font-weight: 300
  color: #797979
  width: 100%
  &:focus
    box-shadow: none
    outline: none

.gc-exercise-description-edit
  border-radius: 5px
  border: solid 1px #cbd4d7
  padding: 10px 20px
  margin-bottom: 45px

.gc-exercise-header-wrapper
  height: 65px
  background-color: #f9f9f9
  margin-bottom: 20px

.gc-exercise-btn
  text-transform: uppercase
  font-weight: 300
  font-size: 12px
  line-height: 1.33
  padding-top: 5px
  padding-bottom: 5px
  border-radius: 40px
  width: 75px
  cursor: pointer

.gc-exercise-header
  display: flex
  align-items: center
  height: 100%

  region[data-name='privacy_widget']
    margin-left: 13px

  .btn.btn-warning
    @extend .gc-exercise-btn
    border-radius: 3px
    background-color: #fd9727
    width: 68px

    span
      margin-left: 0!important

  .fa.fa-lock
    display: none

  .gc-author-widget
    height: 27px
    padding-top: 0

    .name
      line-height: 13px
      a
       font-size: 12px

.gc-edit-exercise
  color #3a99d8
  background-color: transparent
  border: solid 1px #3a99d8
  margin-left: auto

.gc-save-exercise
  color #fff
  background-color: #3a99d8
  border: solid 1px #3a99d8
  margin-left: auto

.gc-exercise-wrapper
  padding: 0 15px 5px!important

  .gc-action-button.type-delete
    @extend .gc-exercise-btn
    background-color: #e54d42
    color: #fff
    margin-right: 0
    margin-bottom: 40px

.gc-exercise-label
  font-size: 15px
  font-weight: 300
  color: #3a99d8
  width: 100%
  line-height: 19px

.gc-exercise-name
  width: 100%
  height: 50px
  border-radius: 5px
  border: solid 1px #cbd4d7
  padding-left: 16px
  margin-bottom: 20px
  margin-top: 7px

.gc-exercise-name,
.gc-exercise-name::placeholder
  line-height 20px
  font-size 16px
  font-weight 300
  color #797979

.gc-exercise-wrapper
  .gc-video-assigned-placeholder
    height: 393px
    margin-bottom: 20px
  .gc-video-player
    border-radius: 0
    border: none
    .gc-video-preview
      height: 393px

@media (min-width: 992px)
  .gc-exercise-header
    padding: 0 30px
  .gc-exercise-wrapper
    .gc-action-button.type-delete
      margin-right: 30px

.gc-exercise-video-empty
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  margin-top: 200px

  .icon
    display: block
    width: 61px
    height: 24px
    margin-bottom: 42px
    background-color: #FFF
    background: url("../images/icon-empty-video.png") no-repeat

  span
    font-size: 14px
    color: #c1c1c1