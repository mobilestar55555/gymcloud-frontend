$grey-color = #a6a7aa
$blue-color = #257fcc
$text-color = #333333

:local .question
  display: flex
  flex-direction: column
  justify-content: center
  align-items: stretch

  .title
    font-size: 18px
    font-weight: 800
    text-align: center
    margin: 0

  .question_number
    text-align: center
    color: $grey-color
    font-size: 16px

  input
    display: none
    font-size: 24px
    color: black

  input[type="text"]
    display: block
    height: 40px
    margin: 5px 40px
    padding: 0 10px
    border: none
    border: 1px solid $grey-color
    border-radius: 3px
    color: black
    font-size: 16px

    &::placeholder
      color: $text-color

    &:not(:placeholder-shown)
      border-color: $blue-color

    &[value]
      border-color: $blue-color

  label.checkbox
    display: flex
    justify-content: space-between
    align-items: center
    height: 40px
    margin: 5px 40px
    padding: 0 10px
    font-size: 16px
    color: $text-color
    border: 1px solid $grey-color
    border-radius: 3px

    &.checked
      border-color: $blue-color

    &:has(> input:checked)
      border-color: $blue-color

    .check
      display: none
      width: 27px
      height: 27px
      background: url('./../../../../images/check.png') no-repeat

    input:checked + .check
      display: inline-block
