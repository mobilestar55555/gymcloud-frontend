$transactions-header-color = #c0c0c0
$transactions-item-color = #7e7e7e
$transactions-border-color = #ededed

.no-transactions
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column

  .image
    width: 30px
    height: 30px
    margin-bottom: 20px
    background-image: url(../../../images/no_transactions.png)
    background-repeat: no-repeat

  span
    color: $transactions-header-color

.transactions
  height: 100%
  margin: 0 15px

  .transactions-list
    height: 100%

  .transactions-header,
  .transactions-item
    display: flex
    align-items: center
    width: 100%
    height: 61px
    border-bottom: 1px solid $transactions-border-color

    .date,
    .description,
    .amount,
    .status
      float: left
      padding: 0 15px

    .date
      width: 16.66666667%
      padding-left: 0

    .description
      width: 50%
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis

    .amount,
    .status
      width: 16.66666667%
      display: flex
      align-items: center
      justify-content: center

  .transactions-header
    color: $transactions-header-color

  .transactions-item
    color: $transactions-item-color
