.gc-editable-textarea

  .content
    display: none
    border: 1px dashed transparent
    color: #333
    font-size: 14px

  textarea
    border: 1px dashed transparent
    box-shadow: none
    color: #333
    font-size: 14px
    resize: vertical
    height: 2.5em
    max-height: 15em
    resize: none

    &:hover
      border-color: #3a99d8
      cursor: pointer

    &:focus
      outline: none
      border-color: #3a99d8
      box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)

    &::placeholder
      color: #999
      opacity: 1

    &[readonly],
    &:focus[readonly]
      background-color: initial
      outline: none
      border: none
      box-shadow: none

@media print

  .gc-editable-textarea

    textarea
      display: none !important
      font-size: 17px
      color: #393939

    .content
      display: block

      &:empty
        display: none
